package com.soprahr.utils;

import java.text.ParseException;
import java.text.SimpleDateFormat;
import java.util.Calendar;
import java.util.Date;

import net.minidev.json.JSONObject;

public class Utils {

	public Utils() {
		super();
	}

	public JSONObject dateEquals(Date d1, Date d2) {
		JSONObject jo = new JSONObject();
		Calendar c1 = Calendar.getInstance();
		Calendar c2 = Calendar.getInstance();
		c1.setTime(d1);
		c2.setTime(d2);

		if (c1.get(Calendar.YEAR) == c2.get(Calendar.YEAR)) {
			if (c1.get(Calendar.MONTH) == c2.get(Calendar.MONTH)) {
				if (c1.get(Calendar.DAY_OF_MONTH) == c2.get(Calendar.DAY_OF_MONTH)) {
					jo.put("Success", "Les dates sont égaux");
					return jo;
				} else {
					jo.put("Error", "Les mois sont differents");
					return jo;
				}
			} else {
				jo.put("Error", "Les mois sont differents");
				return jo;
			}
		} else {
			jo.put("Error", "Les années sont differentes");
			return jo;
		}

	}

	public JSONObject convertStringToDate(String sDate) {

		JSONObject jo = new JSONObject();
		try {
			Date date = new SimpleDateFormat("yyyy-MM-dd").parse(sDate);
			jo.put("Date", date);
			return jo;
		} catch (ParseException e) {
			jo.put("Error", e);
			
		}
	}
}
